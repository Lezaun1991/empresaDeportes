# Usa una imagen base de Node.js 20
FROM node:20.13.1

# Establece el directorio de trabajo en /app
WORKDIR /app

# Copia los archivos de package.json y package-lock.json al contenedor
COPY package*.json ./

# Instala las dependencias
RUN npm install

# Copia el resto de los archivos del proyecto al contenedor
COPY . .

# Construye la aplicaci贸n para producci贸n
RUN npm run build

# Usa una imagen ligera de Nginx para servir la aplicaci贸n
FROM nginx:alpine

# Copia los archivos de construcci贸n al directorio Nginx
COPY --from=0 /app/dist /usr/share/nginx/html

# Expone el puerto 80
EXPOSE 80

# Comando para iniciar Nginx
CMD ["nginx", "-g", "daemon off;"]
